{
  "name": "plone-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Plone CMS REST API integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "inspector": "npx @modelcontextprotocol/inspector tsx src/index.ts",
    "inspector:built": "npx @modelcontextprotocol/inspector node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:functional": "jest tests/functional",
    "test:acceptance": "jest tests/acceptance",
    "test:acceptance:hello-world": "jest tests/acceptance/create-page-hello-world.test.ts",
    "test:acceptance:mcp": "node tests/acceptance/mcp-create-page-test.js",
    "test:acceptance:hello-world-direct": "node tests/acceptance/hello-world-acceptance.test.js",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "test:unit-only": "jest tests/unit tests/integration --coverage"
  },
  "keywords": [
    "mcp",
    "plone",
    "cms",
    "rest-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "nock": "^13.5.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@9.14.1"
}
